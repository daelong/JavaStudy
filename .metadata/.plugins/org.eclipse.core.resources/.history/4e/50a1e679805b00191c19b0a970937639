import java.util.*;

public class NumeralSystem {

	public static void main(String[] args) {
		int n, x, m, y, k;
		int remainder = 0;
		int i = 1;
		int sum = 0;
		int quotient = 0;
		int result =0;
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("n을 입력하시오 : ");
		n = scanner.nextInt();
		System.out.println("x를 입력하시오 : ");
		x = scanner.nextInt(n);
		System.out.println("m을 입력하시오 : ");
		m = scanner.nextInt();
		System.out.println("y를 입력하시오 : ");
		y = scanner.nextInt(m);
		System.out.println("k를 입력하시오 : ");
		k = scanner.nextInt();
		
		sum = x+y;
		System.out.println(k); // 마지막 n진수
		System.out.println(sum); //x+y의 총합
		while(sum>k){
			quotient = sum/k; // 142/9 = 15, 15/9 = 1
			remainder = sum%k; // 142%9 = 7, 15%9 = 6
			remainder = sum*i; // 7*i = 1, 6*10 = 60
			i = i*10; // i = 10, i = 100
			result += remainder; //result = 7 , 67
			sum = quotient; // remainder = 15 , 1 = sum
		}
		quotient = quotient*i; // 1 * 100
		result = result + quotient; // 67 + 100
		System.out.println(result); // 167
		
		/*
		int d = c%10*k;
		int e = c/10*1;
		int f = d+e;
		System.out.println(x+y);
		System.out.println();
		System.out.println(x);
		System.out.println(y);
		System.out.println(f);
		*/
		/*if(n != 10) {
			while(x < n) {
				
			}
		}*/
	}

}